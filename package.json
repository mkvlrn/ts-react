{
  "name": "ts-react",
  "repository": "git@github.com:mkvlrn/ts-react",
  "author": "Mike Valeriano <mkvlrn@gmail.com>",
  "type": "module",
  "module": "build/index.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "yarn vite",
    "build": "yarn tsc && npx vite build",
    "type-check": "yarn tsc-files",
    "format-lint": "yarn biome check",
    "prebuild": "rm -rf build",
    "prepare": "yarn husky install",
    "start": "node build",
    "test": "yarn vitest --run",
    "test-cov": "rimraf coverage && yarn vitest run --coverage",
    "test-staged": "yarn vitest related --run"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.4.1",
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/react": "^14.1.2",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.1.1",
    "autoprefixer": "^10.4.16",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.32",
    "postcss-load-config": "^5.0.2",
    "tailwindcss": "^3.4.0",
    "ts-node": "^10.9.2",
    "tsc-files": "^1.1.4",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vitest": "^1.1.1"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
